<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/navigate_title"
            android:textColor="@android:color/black"
            android:textSize="30sp" />


        <LinearLayout style="@style/NavigateLinearLayout">

            <com.rubyko.client.common.view.SquareButton
                android:id="@+id/navigate_chat_btn"
                style="@style/RubykoButtonNavigate"
                android:layout_marginRight="@dimen/navigate_botton_margin"
                android:text="@string/navigate_chat" />

            <com.rubyko.client.common.view.SquareButton
                android:id="@+id/navigate_videocall_btn"
                style="@style/RubykoButtonNavigate"
                android:layout_marginLeft="@dimen/navigate_botton_margin"
                android:layout_marginRight="@dimen/navigate_botton_margin"
                android:text="@string/navigate_video_call" />

            <com.rubyko.client.common.view.SquareButton
                android:id="@+id/navigate_logout_btn"
                style="@style/RubykoButtonNavigate"
                android:layout_marginLeft="@dimen/navigate_botton_margin"
                android:text="@string/navigate_logout" />

        </LinearLayout>


        <LinearLayout style="@style/NavigateLinearLayout">

            <com.rubyko.client.common.view.SquareButton
                android:id="@+id/navigate_account_btn"
                style="@style/RubykoButtonNavigate"
                android:layout_marginRight="@dimen/navigate_botton_margin"
                android:text="@string/navigate_account" />

            <com.rubyko.client.common.view.SquareButton
                android:id="@+id/navigate_post_btn"
                style="@style/RubykoButtonNavigate"
                android:layout_marginLeft="@dimen/navigate_botton_margin"
                android:layout_marginRight="@dimen/navigate_botton_margin"
                android:text="@string/navigate_post" />

            <com.rubyko.client.common.view.SquareButton
                android:id="@+id/navigate_setting_btn"
                style="@style/RubykoButtonNavigate"
                android:layout_marginLeft="@dimen/navigate_botton_margin"
                android:text="@string/navigate_setting" />

        </LinearLayout>


        <LinearLayout style="@style/NavigateLinearLayout">

            <com.rubyko.client.common.view.SquareButton
                android:id="@+id/navigate_collision_btn"
                style="@style/RubykoButtonNavigate"
                android:layout_marginRight="@dimen/navigate_botton_margin"
                android:text="@string/navigate_colision" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>