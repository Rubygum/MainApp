<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".splash.SplashActivity">


    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:id="@+id/login_fragment_layout"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.rey.material.widget.Button
            style="@style/Material.Drawable.Ripple.Touch.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginBtn"
            android:text="@string/login_btn"
            android:textSize="25sp"
            android:padding="15dp"
            android:layout_marginBottom="20dp"
            app:rd_enable="true"
            app:rd_cornerRadius="7dp"
            app:rd_rippleAnimDuration="300"
            app:rd_maxRippleRadius="match_view"
            />

        <com.rey.material.widget.Button
            style="@style/Material.Drawable.Ripple.Touch.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/regisrBtn"
            android:text="@string/registr_btn"
            android:textSize="25sp"
            android:padding="15dp"
            app:rd_enable="true"
            app:rd_cornerRadius="7dp"
            app:rd_rippleAnimDuration="300"
            app:rd_maxRippleRadius="match_view"
            />
    </LinearLayout>

</RelativeLayout>
